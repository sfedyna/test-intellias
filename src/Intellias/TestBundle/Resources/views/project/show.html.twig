{% extends "IntelliasTestBundle::layout.html.twig" %}
{% block header %}
    <h1>{{ project.name }}</h1>
    <a href="{{ path('project_edit', { 'id': project.id }) }}"
       class="ui-btn ui-btn-inline ui-corner-all ui-shadow ui-btn-icon-right ui-icon-edit">Edit</a>
{% endblock %}
{% block content %}
    <h5>{% if project.updated %}Last updated: {{ project.updated|date('Y-m-d H:i:s') }}{% endif %}</td></h5>
    <p>{{ project.description }}</p>
    {% if project.users %}
        <div data-role="collapsible">
            <h4> Users: </h4>
            <ul data-role="listview" data-filter="true" data-filter-theme="a" data-divider-theme="b">
                {% for user in project.users %}
                    <li>
                        <a href="{{ path('user_show', { 'id': user.id }) }}">
                            {{ user.firstName }} {{ user.lastName }} - {{ user.email }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <a href="{{ path('project_index') }}">Back to the list</a>
{% endblock %}
